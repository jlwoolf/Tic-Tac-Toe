<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TTT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="title" />
        <item name="ic_play_game">@drawable/ic_play_game_dark</item>
        <item name="ic_history">@drawable/ic_history_dark</item>
        <item name="ic_filter">@drawable/ic_filter_dark</item>
        <item name="ic_sort">@drawable/ic_sort_dark</item>
        <item name="ic_game_settings">@drawable/ic_game_settings_dark</item>
        <item name="ic_customize">@drawable/ic_customize_dark</item>
        <item name="ic_exit">@drawable/ic_exit_dark</item>
        <item name="ic_settings">@drawable/ic_settings_dark</item>
        <item name="ic_launcher_background">@mipmap/ic_launcher_dark_background</item>
        <item name="ic_launcher_foreground">@mipmap/ic_launcher_dark_foreground</item>

        <item name="img_board">@drawable/board_dark</item>
        <item name="img_welcome_board">@drawable/welcome_board_dark</item>
        <item name="img_x">@drawable/x_dark</item>
        <item name="img_o">@drawable/o_dark</item>
        <!-- Customize your theme here. -->
    </style>
</resources>