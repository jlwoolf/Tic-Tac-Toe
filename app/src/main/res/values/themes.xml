<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TTT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="title" />
        <item name="ic_play_game">@drawable/ic_play_game_light</item>
        <item name="ic_history">@drawable/ic_history_light</item>
        <item name="ic_filter">@drawable/ic_filter_light</item>
        <item name="ic_sort">@drawable/ic_sort_light</item>
        <item name="ic_game_settings">@drawable/ic_game_settings_light</item>
        <item name="ic_customize">@drawable/ic_customize_light</item>
        <item name="ic_exit">@drawable/ic_exit_light</item>
        <item name="ic_settings">@drawable/ic_settings_light</item>
        <item name="ic_launcher_background">@mipmap/ic_launcher_light_background</item>
        <item name="ic_launcher_foreground">@mipmap/ic_launcher_light_foreground</item>

        <item name="img_board">@drawable/board_light</item>
        <item name="img_welcome_board">@drawable/welcome_board_light</item>
        <item name="img_x">@drawable/x_light</item>
        <item name="img_o">@drawable/o_light</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.TTT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TTT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TTT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>